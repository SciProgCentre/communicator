package=org.zeromq.czmq
headers=czmq.h
compilerOpts.linux=-I/usr/include
linkerOpts.linux=-L/usr/lib/x86_64-linux-gnu -L/usr/lib64 -lczmq -lzmq -lsystemd -luuid
compilerOpts.osx=-I/usr/local -I/usr/local/include
linkerOpts.osx=-L/opt/local/lib -L/usr/local/lib -lczmq -lzmq
---
static inline int zloop_timer1(zloop_t *self, size_t delay, size_t times, int (*handler)(zloop_t *loop, int timer_id, void *arg), void *arg) {
  return zloop_timer(self, delay, times, handler, arg);
}

static inline int zloop_reader1(zloop_t *self, zsock_t *sock, int (*handler) (
  zloop_t *loop, zsock_t *reader, void *arg), void *arg) {
  return zloop_reader(self, sock, handler, arg);
}
